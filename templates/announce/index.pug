extends ../layout.pug

block content
    h1 
        case realty.type
            when '1'
                | Maison #{realty.area}m² - #{realty.room} pièce(s)
                - break
            when '2' 
                | Appartement #{realty.area}m² - #{realty.room} pièce(s)
                - break
            when '3' 
                | Terrain
                - break
            when '4' 
                | Parking
                - break
            when '5' 
                | Local / Bureau
                - break
            default
                | Autres

    if photos|length > 0
    else
        svg.bd-placeholder-img(width="400" height="300" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false")
            rect(width="100%" height="100%" fill="#55595c")
            text(x="30%" y="50%" fill="#eceeef" dy=".3em") Pas de photo
                    
    h3.mb-0 #{realty.price}€
    .mb-1.text-muted #{realty.address.zipcode} #{realty.address.city}     
          
